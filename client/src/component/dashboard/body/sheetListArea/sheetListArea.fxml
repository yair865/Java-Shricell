<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.VBox?>

<VBox fx:id="sheetsListComponent" xmlns="http://javafx.com/javafx/22" xmlns:fx="http://javafx.com/fxml/1" fx:controller="component.dashboard.body.sheetListArea.SheetsListController">
   <children>
      <Label alignment="CENTER" prefHeight="31.0" prefWidth="600.0" text="Available Sheets" />
      <TableView fx:id="sheetsTableView" prefHeight="200.0" prefWidth="200.0">
         <columns>
            <TableColumn fx:id="userNameColumn" prefWidth="125.0" text="username" />
            <TableColumn fx:id="sheetNameColumn" prefWidth="366.0" text="sheet name" />
            <TableColumn fx:id="sizeColumn" prefWidth="108.0" text="size" />
         </columns>
         <columnResizePolicy>
            <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
         </columnResizePolicy>
      </TableView>
   </children>
</VBox>
